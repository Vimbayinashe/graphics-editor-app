<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox prefHeight="600" prefWidth="800" spacing="5.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.draw.canvas.labb3.Controller">
    <MenuBar>
        <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" text="Action 1" />
            <MenuItem mnemonicParsing="false" text="Action 2" />
            <MenuItem mnemonicParsing="false" text="Action 3" />
        </Menu>
        <Menu mnemonicParsing="false" text="Settings">
            <MenuItem mnemonicParsing="false" text="Action 1" />
            <MenuItem mnemonicParsing="false" text="Action 2" />
            <MenuItem mnemonicParsing="false" text="Action 3" />
        </Menu>
    </MenuBar>

    <ButtonBar prefHeight="40.0" prefWidth="100.0">
       <buttons>
         <Button mnemonicParsing="false" text="Circle" translateX="-800.0" />
         <Button mnemonicParsing="false" text="Triangle" translateX="-800.0" />
         <Button mnemonicParsing="false" text="Button" translateX="-800.0" />
     </buttons>
   </ButtonBar>

    <StackPane fx:id="canvasParent" prefHeight="600" prefWidth="600" maxWidth="1000" translateX="100"
               translateY="120.0">
<!--        <ResizableCanvas fx:id="canvas" onMouseClicked="#canvasClicked"/>-->
        <Canvas fx:id="canvas" />
    </StackPane>

    <stylesheets>
        <URL value="@css/stylesheet.css" />
    </stylesheets>

<!-- move translateX, ButtonWidth & VBox dimension to a variable & divide by it -->
<!-- or Align buttons to left using CSS -->
</VBox>
